#!/bin/bash

# This simple script downloads various packages and applications
# for setting up new computers

apt-get update
apt-get upgrade && apt-get dist-upgrade

# Packages/Libraries
apt-get install build-essential python2.7 python2.7-dev git cmake
apt-get install p7zip-full

# Applications
apt-get install terminator
apt-get install chromium-browser
apt-get install bless
apt-get install meld
apt-get install grsync
apt-get install cairo-dock
